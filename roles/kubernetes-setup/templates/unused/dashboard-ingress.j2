metadata:
  name: access-jenkins
  namespace: devops-tools
spec:
  ingressClassName: haproxy-myingress
  rules:
  - host: "dashboard.rmusin.local"
    http:
      paths:
      - path: /jenkins
        pathType: Prefix
        backend:
          service:
            name: jenkins-service
            port:
              number: 80