apiVersion: kubeadm.k8s.io/v1beta3
kind: ClusterConfiguration
kubernetesVersion: {{ k8s_version }}
controlPlaneEndpoint: {{ balancer_address }}
networking:
  podSubnet: {{ pod_network_cidr }}
etcd:
  local:
    imageRepository: {{ harbor_dn }}
    imageTag: "3.5.1-0"
#  external:
